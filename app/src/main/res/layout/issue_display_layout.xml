<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/issue_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/display_issue_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue Title"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/display_issue_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Issue Description"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/display_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Yes:"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/display_yes_votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes Votes"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/display_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="No:"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/display_no_votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="No Votes"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voting Deadline Date: "
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/display_voting_deadline_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Voting Deadline Date"
                    android:textSize="16dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voting Deadline Time: "
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/display_deadline_time_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Voting Deadline Time"
                    android:textSize="16dp"/>


                </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
