<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:id="@+id/complaint_cardview"
        android:layout_marginBottom="15dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/display_complaint_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complaint Title - "
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/display_complaint_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complaint Resident"
                    android:layout_marginStart="10dp"
                    android:textSize="12dp"/>

                <!--<TextView
                    android:id="@+id/display_uploaded_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uploaded On"
                    android:layout_marginStart="10dp"
                    android:textSize="16dp"/>-->

            </LinearLayout>

            <TextView
                android:id="@+id/display_complaint_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:text="Complaint Description"
                android:textSize="16dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>